<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/dashboardheader') %> 
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../partials/sidebar', {deviceID: deviceID}) %> 
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('../partials/topbar', user) %> 
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="bg-white p-3 rounded">
                        <div class="text-right"><button type="button" onclick="redirectStatus()" class="btn btn-primary">Status: <%= mode[0].toUpperCase() + mode.substr(1) %></button></div>
                        <br>
                        <h3>Car Location</h3>
                        <div id="map" style="height:500px;"></div>
                    </div>

                    <br>

                    <div class="bg-white p-3 rounded">
                        <h3>Location History</h3><br>
                        <div class="row text-center">
                            <div class="col-5">
                                Time
                            </div>
                            <div class="col-7">
                                Location
                            </div>
                        </div>
                        <hr>
                        <div id="table-container">
                            <!-- Filled with JavaScript -->
                        </div>
                    </div>
                    <br>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../partials/footer') %> 
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="index.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <%- include('../partials/script') %> 
    
    <script>
        function showPosition(position) {
            var latitude = position.lat;
            var longitude = position.long;
            var container = L.DomUtil.get('map');
            if(container != null){
                container._leaflet_id = null;
            }
            var map = L.map('map').setView([latitude, longitude], 15);
        
            L.tileLayer(
                'https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token=pk.eyJ1Ijoia2hvaXJvbnkiLCJhIjoiY2t6c2w1anA5MHFyNjJwbzF3dHRzMmlrbSJ9.CvST75663DLudTug1RmUvg', {
                    attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery © <a href="https://www.mapbox.com/">Mapbox</a>',
                    maxZoom: 18,
                    id: 'mapbox/streets-v11',
                    tileSize: 512,
                    zoomOffset: -1,
                    accessToken: 'pk.eyJ1Ijoia2hvaXJvbnkiLCJhIjoiY2t6c2w1anA5MHFyNjJwbzF3dHRzMmlrbSJ9.CvST75663DLudTug1RmUvg'
                }).addTo(map);
                
                var popup = L.popup()
                    .setLatLng([latitude, longitude])
                    .setContent("A 123 AB")
                    .openOn(map);
        }

        const printTable = (locations) => {
            const container = document.getElementById('table-container')
            locations.forEach(element => {
                let row = document.createElement('div')
                row.className = 'row text-center'

                let left = document.createElement('div')
                left.className = 'col-5'
                let date = new Date(element.createdAt).toLocaleDateString()
                let time = new Date(element.createdAt).toLocaleTimeString('id', { hc: "h24"})
                left.innerText = date + ' ' + time
                
                let right = document.createElement('div')
                right.className = 'col-7'
                right.innerText = element.lat + ', ' + element.long + '\n'

                row.appendChild(left)
                row.appendChild(right)
                container.appendChild(row)
            });
        }

        const clearTable = () => {
            document.getElementById('table-container').innerHTML = ""
            document.getElementById('map').innerHTML = ""
        }

        const getData = () => {
            $.get("/api/dashboard/" + <%= deviceID %> + "/data", (data, status) => {
                let position = {
                    lat : data[0].lat,
                    long : data[0].long
                }
                clearTable()
                showPosition(position)
                printTable(data)
                data = undefined
                delete(data)
            })
        }
        getData()
        setInterval(getData, 5000)

        const redirectStatus = () => {
            document.location.href = '/api/dashboard/' + <%= deviceID %> + '/status';
        }

        
